      <artifactId>org.aal-persona.zigbee.common</artifactId>
    </dependency>
    <dependency>
      <groupId>org.aal-persona.sail</groupId>
      <artifactId>org.aal-persona.zigbee.dongle.api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.aal-persona.sail</groupId>
      <artifactId>org.aal-persona.zigbee.basedriver</artifactId>
      <version>0.6.0-SNAPSHOT</version>
    </dependency-->
